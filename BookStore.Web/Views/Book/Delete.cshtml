@model BookStore.Domain.Domain.Book

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container w-50 p-5 mx-auto shadow-lg mb-5 bg-body-tertiary rounded-4">
    <h1 class="display-5 text-center ">Delete Book</h1>
    <hr class="border-3 rounded-3 mx-auto" style="width:150px" />
    <div class="row">
        <div class="col w-75 mx-auto">
            <h4 class="text-center ">Are you sure you want to delete this?</h4>
            <div>
    
                <dl class="row">
                    <dt class="col-sm-2">
                       @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        <h2>@Html.DisplayFor(model => model.Title)</h2>
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Author)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Author.Name)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn text-center btn-danger m-2" />
                </form>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class=" btn btn-dark m-2">Back to List</a>
    </div>

</div>




