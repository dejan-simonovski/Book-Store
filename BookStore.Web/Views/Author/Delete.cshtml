@model BookStore.Domain.Domain.Author

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container w-50  mx-auto shadow-lg text-center p-5 mb-5 bg-body-tertiary rounded-4">
    <h1 class="display-5">Delete Author</h1>
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <hr class="border-3 rounded-3 mx-auto" style="width:150px" />
    <div class="row">
        <div class="col w-75 mx-auto">
            <h4>Are you sure you want to delete this?</h4>
            <div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="text-center btn btn-danger m-2" />
                </form>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="text-center  btn btn-dark m-2">Back to List</a>
    </div>

</div>




