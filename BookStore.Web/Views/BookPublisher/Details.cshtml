@model BookStore.Domain.Domain.BookPublisher

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row w80 mx-auto">
    <div class="col-md-4">
        <img src="@Model.Book.Image" class="" style="height:420px;width:300px" alt="...">
    </div>
    <div class="col-md-8">
        <h1 class="display-5 text-center my-2" style="color:#1A4D2E">Details for BookPublisher</h1>
        <hr class="border-3 rounded-3 mx-auto" style="width:200px" />
        <dl class="row">
            <h2> @Html.DisplayFor(model => model.Book.Title)</h2>


            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher)
            </dt>
            <dd class="col-sm-10">
                <a class="text-dark  fw-bolder" asp-controller="Publisher" asp-action="Details" asp-route-id="@Model.Publisher.Id">@Model.Publisher.Name</a>
            </dd>
            <dt class="col-sm-2">
                <h4>Price</h4>
            </dt>
            <dd class="col-sm-10">
                <h2> @Html.DisplayFor(model => model.Price).00 MKD</h2>
            </dd>
            <a asp-controller="BookPublisher" class="btn my-3 btn-success px-3" asp-action="AddProductToCart" asp-route-id="@Model.Id">Add To Cart</a>
            <div class="my-3">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Edit</a> | 
                <a asp-action="Index" class="btn btn-dark">Back to List</a> | 
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Delete</a>
            </div>
        </dl>
    </div>


</div>

